<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_md"
    android:layout_marginVertical="@dimen/margin_sm"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="@dimen/elevation_card"
    app:cardBackgroundColor="@color/background_dark_blue"
    app:strokeColor="@color/gold_theme"
    app:strokeWidth="@dimen/stroke_thin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/text_lg"
        android:layoutDirection="ltr"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/score_IMG_trophy"
            android:layout_width="@dimen/trophy_icon_size"
            android:layout_height="@dimen/trophy_icon_size"
            android:layout_marginEnd="@dimen/margin_xl"
            android:visibility="invisible"
            tools:visibility="visible"
            tools:src="@drawable/winner" />
        <TextView
            android:id="@+id/score_LBL_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/player_name_placeholder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:fontFamily="@font/russo"/>

        <TextView
            android:id="@+id/score_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_value_placeholder"
            android:textColor="@color/gold_theme"
            android:textSize="@dimen/text_xxl"
            android:textStyle="bold"
            android:fontFamily="@font/russo"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>